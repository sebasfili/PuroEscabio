<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuroEscabio.App.Views.AddPage" Title="Add">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnGuardar" Text="Guardar"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Nombre" FontSize="Medium" TextColor="#e74c3c" ></Label>
            <Entry x:Name="enNombre"></Entry>
            <Label Text="Apellido" FontSize="Medium" TextColor="#e74c3c" ></Label>
            <Entry x:Name="enApellido"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>